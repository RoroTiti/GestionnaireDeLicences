<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IHM.MainActivity">

    <Button
        android:id="@+id/btNouvelleLicence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouvelle licence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLicences" />

    <Button
        android:id="@+id/btLicences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Licences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btNouveauClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouveau client"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btClients" />

    <Button
        android:id="@+id/btClients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btNouvelleLicence" />

    <Button
        android:id="@+id/btAffectation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Affectation des licences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btNouveauClient" />

    <Button
        android:id="@+id/btQuitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>